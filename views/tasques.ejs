<p>Tasques</p>

<form action="/creacioTasca" method="POST">
	<input type="text" name="titol" placeholder="titol">
   	<input type="text" name="descripcio" placeholder="descripciÃ³">
   	<input type="text" name="preu" placeholder="preu asignat">
   	<input type="text" name="temps" placeholder="duracio">
   <button class="btn btn-primary">Crea la Tasca</button>
</form> 
<div class="table-responsive">
<table class="table" width="100%">
	<thead>
	<tr>
	<td>Titol</td>
	<td>Descripcio</td>
	<td>Preu</td>
	<td>Temps</td>
	<td>Accions</td>
	</tr>
	</thead>
	<tbody>
	<% if (tasks.length >0) { %>
	  <% tasks.forEach(task => { %>
	  <tr>
	  <td><%= task.titol %></td>
	  <td><%= task.descripcio %></td>
	  <td><%= task.preu %></td>
	  <td><%= task.temps %></td>
	  <td>
	  	<form action="/eliminaTasca" method="POST">
	  		<button name="titol" value="<%=task.titol%>">Elimina</button>
	  	</form> 
	  </td>
	</tr>
	 <tr>
	 	<form action="/modificaTasca" method="POST">
			<td><input type="text" name="newTitol" value="<%=task.titol%>" readonly></td>
			<td><input type="text" name="newDescripcio" value="<%=task.descripcio%>" readonly></td>
			<td><input type="text" name="newPreu" value="<%=task.preu%>"></td>
			<td><input type="text" name="newTemps" value="<%=task.temps%>"></td>
			<td><button>Modifica</button></td>
		
		</form> 
	</tr>
  	<% }); %>
<% } %>
</tbody>
</table>
</div>


<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
